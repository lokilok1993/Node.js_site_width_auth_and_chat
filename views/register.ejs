<% layout('main') -%>
<% block('header', 'Регистрация нового пользователя'); %>
<form action="/register" id="register_form" method="post" onsubmit="return checkPassword()">


      <div class="login">
        <label for="login">Логин</label>
        <input type="text" name="login">
      </div>

      <div class="password">
        <label for="password">Пароль</label>
        <input type="password" name="password" id="password">
      </div>

      <div class="password-confirm">
        <label for="password-confirm">Подтвердить пароль</label>
        <input type="password" name="password-confirm" id="password-confirm">
      </div>
      

    <input type="submit" value="Зарегистрироваться">

  </fieldset>
</form>

<script type="text/javascript">
  
function checkPassword(){
  var p1 = document.getElementById('password');
  var p2 = document.getElementById('password-confirm');

  if(p1.value != p2.value){
    alert("Wrong password");
    p1.value = "";
    p2.value = "";
    return false;
  }else{
    document.forms[0].submit();
    return true;
  }
}


</script>